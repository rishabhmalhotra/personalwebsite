# EditorConfig helps maintain consistent coding styles across different editors
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf 